<div class="m-auto mt-16 pt-16 mb-16 pb-16 bg-dark-pastel lg:w-1/2 w-full">

<% @posts.each do |post| %>

  <div class="flex justify-center">
    <div class="lg:w-2/3 w-full px-10 py-6 mt-4 mb-4 bg-paper-brown rounded-lg shadow-md">
      <div class="flex justify-between items-center">
        <span class="font-light text-gray-600">
          <%= post.created_at.strftime("%B %d, %Y") %>
        </span>
      
      </div>

      <div class="mt-4">

        <p class="text-2xl text-gray-700 font-bold hover:underline"><%= link_to post.title, post %></p>

        <p class="mt-6 pt-6 mb-4 border-t-2 border-indigo-400 text-gray-500" id="<%= post.id %>">
          <script>
          
            document.getElementById("<%= post.id %>").innerHTML = readMore("<%= post.content %>");
          
          </script>
        </p>
      
      </div>

    </div>
  </div>
<% end %>

</div>

