<div class="m-auto h-screen mt-4 pt-16 mb-16 pb-16 bg-dark-pastel lg:w-1/2 w-full">


<div class="lg:w-2/3 w-full px-10 py-6 lg:m-auto bg-paper-brown rounded-lg shadow-md"> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.text_field :login, autofocus: true, autocomplete: "username/password", class: "shadow w-full p-2 border rounded", placeholder: "ユーザー" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow w-full p-2 mt-6 mb-4 border rounded", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "bg-blue-500 hover:bg-blue-900 text-white font-bold mt-4 mb-4 py-2 px-4 rounded" %>
    </div>
  <% end %>
<div class="flex justify-between"> <%= render "devise/shared/links" %></div>
 
</div>

  

</div>

